<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3CB371"
    android:orientation="vertical"
    tools:context=".march.RoadFragment">

    <include layout="@layout/title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/hcks2"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center_horizontal"
                android:text="环城快速路"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="285dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hcks1"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:text="环城快速路"
                    android:textSize="20sp" />


                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/xyl"
                            android:layout_width="25dp"
                            android:layout_height="160dp"
                            android:layout_marginLeft="50dp"
                            android:background="#ffffff"
                            android:gravity="center_vertical"
                            android:text="学院路"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/lxl"
                            android:layout_width="25dp"
                            android:layout_height="160dp"
                            android:layout_marginLeft="60dp"
                            android:background="#ffffff"
                            android:gravity="center_vertical"
                            android:text="联想路"
                            android:textSize="20sp" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:background="#ffffff" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/xfl"
                            android:layout_width="25dp"
                            android:layout_height="165dp"
                            android:layout_marginLeft="50dp"
                            android:background="#ffffff"
                            android:gravity="center_vertical"
                            android:text="幸福路"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/yyl"
                            android:layout_width="25dp"
                            android:layout_height="165dp"
                            android:layout_marginLeft="60dp"
                            android:background="#ffffff"
                            android:gravity="center_vertical"
                            android:text="医院路"
                            android:textSize="20sp" />

                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/car_park"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_margin="55dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="停车场" />

                <TextView
                    android:id="@+id/hcgs"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:text="环城高速"
                    android:textSize="20sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/hcks3"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center_horizontal"
                android:text="环城快速路"
                android:textSize="20sp" />


        </LinearLayout>

<HorizontalScrollView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#DDDFE1"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/time1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="2017_6-7"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/timeweek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="星期三"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="温度：17 ℃"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/xdsd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="相对湿度：58%"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/pm25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="PM2.5:29μg/m³"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <Button
                    android:id="@+id/flu"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/sh" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:src="@drawable/road1" />

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:src="@drawable/road2" />

                <ImageView
                    android:id="@+id/road_light"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:src="@drawable/red" />


            </LinearLayout>


        </LinearLayout></HorizontalScrollView>

    </LinearLayout>

</LinearLayout>